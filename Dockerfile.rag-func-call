FROM nvidia/cuda:11.8.0-devel-ubuntu20.04

# Zero interaction (default answers to all questions)
ENV DEBIAN_FRONTEND=noninteractive

# Set work directory
WORKDIR /proj

ENV PYTHON_VERSION=38

# Install general-purpose dependencies
RUN apt-get update -y && \
    apt-get install -y curl \
    git \
    bash \
    nano \
    wget \
    python3.8 \
    python3-pip && \
    apt-get autoremove -y && \
    apt-get clean -y && \
    rm -rf /var/lib/apt/lists/*
RUN pip install --upgrade pip
RUN pip install wrapt --upgrade --ignore-installed
RUN pip install gdown

# Install PyTorch and related packages
RUN pip3 install -f https://download.pytorch.org/whl/cu118/torch_stable.html torch

# Install other Python packages
RUN pip3 install --upgrade pandas
RUN pip3 install --upgrade transformers
RUN pip3 install --upgrade trl
RUN pip3 install --upgrade datasets
RUN pip3 install --upgrade wandb
RUN pip3 install --upgrade tqdm
RUN pip3 install --upgrade huggingface_hub
RUN pip3 install --no-cache-dir gradio
RUN pip3 install trl
RUN pip3 install scikit-learn

# Frameworks
RUN pip3 install llama-index
RUN pip3 install llama-index-llms-huggingface
RUN pip3 install llama-index-embeddings-huggingface
RUN pip3 install langchain
RUN pip3 install llama-index-tools-tavily-research
RUN pip3 install llama-index-tools-wikipedia
RUN pip3 install llama-index-tools-yahoo-finance
RUN pip3 install llama-index-tools-wolfram-alpha
RUN pip3 install llama-index-tools-notion
RUN pip3 install llama-index-tools-code-interpreter

# for profiling
RUN pip3 install matplotlib

# required for flash attention
RUN pip3 install -q accelerate
RUN pip3 install bitsandbytes
# RUN pip3 install evaluate

# required for phi-3
RUN pip3 install einops
RUN pip3 install pytest
RUN pip install flash-attn --no-build-isolation

# Back to default frontend
ENV DEBIAN_FRONTEND=dialog

# Gradio setup
EXPOSE 7860
ENV GRADIO_SERVER_NAME="0.0.0.0"